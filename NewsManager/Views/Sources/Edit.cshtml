@model Data.Models.Source

@{
    ViewData["Title"] = "Edit";
}

<div>
    <h1 class="text-dark fst-italic">AUTHOR</h1>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SourceId" />
            <div class="form-group">
                <label asp-for="NameSource" class="control-label"></label>
                <input asp-for="NameSource" class="form-control" />
                <span asp-validation-for="NameSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
