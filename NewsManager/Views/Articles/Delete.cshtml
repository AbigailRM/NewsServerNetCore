@model Data.Models.Article

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h1 class="text-dark fst-italic">AUTHOR</h1>
</div>


<h3>Are you sure you want to delete this?</h3>


<div>
    <hr />
    <br />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <br />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <br />


        <dt class="col-sm-2">
            URL To Article
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Urlarticle)
        </dd>
        <br />

        <dt class="col-sm-2">
            URL to Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayNameFor(model => model.Urlimagen)" height="260" width="260" />
        </dd>
        <br />

        <dt class="col-sm-2">
            Published At
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishedAt)
        </dd>
        <br />

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Uptake)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uptake)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ArticleId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
