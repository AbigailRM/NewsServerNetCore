                <select asp-for="SortId" class="form-control" asp-items="ViewBag.SortId"></select>
                <span asp-validation-for="SortId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
